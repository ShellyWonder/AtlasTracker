@model AtlasTracker.Models.Ticket

@{
    ViewData["Title"] = "Restore";
}

<div class="right-wrapper text-end">
</div>
<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div> <h1 class="card-title">Restore Ticket</h1>
                <h3>Are you sure you want to restore "@Model.Title" ?</h3>
            </header>
             <div class="card-body">
                <div class="table table-bordered table-striped mb-0" id="datatable-tabletools">
                    <dl>
                        <dt class="col-sm-2">
                            Ticket Title
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-2">
                           Ticket Description
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-2">
                            Project
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Project!.Description)
                        </dd>
                        <dt class="col-sm-2">
                            Date Created
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreatedDate)
                        </dd>

                        <dt class="col-sm-2">
                            Status
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Status!.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Ticket Priority
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TicketPriority!.Name)
                        </dd>
                        <dt class="col-sm-2">
                           Ticket Type
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TicketType!.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Owner
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OwnerUser!.FullName)
                        </dd>
                        <dt class="col-sm-2">
                            Developer
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.DeveloperUserId != null)
                            {
                                @Html.DisplayFor(model => model.DeveloperUser!.FullName)
                            }
                            else
                            {
                                <p><strong>Unassigned</strong></p>                       
                            }
                        </dd>
                    </dl>
                </div>
                
    <form asp-action="Restore">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Restore" class="btn btn-danger" /> |
        <a asp-action="AllTickets">Back to List</a>
    </form>
            </div>
        </section>
    </div>
</div>
