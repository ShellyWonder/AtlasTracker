<script>
    var message = '@(ViewBag.SwalMessage)';
    if(!message.includes("error")&& message != '')
    {
        Swal.fire({
            icon: 'success',
            title: message,
            showConfirmButton: true
        })
    }else if(message.includes("error")){
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: message
        })
    }
</script>
