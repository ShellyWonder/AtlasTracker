@model AtlasTracker.Models.Invite

@{
    ViewData["Title"] = "Create";
}

<div class="right-wrapper text-end">
</div>
<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div> <h1 class="card-title">Create New Invitation</h1>
            </header>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="form-group">
                    <label asp-for="InviteeEmail" class="control-label"></label>
                    <input asp-for="InviteeEmail" class="form-control" />
                    <span asp-validation-for="InviteeEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InviteeFirstName" class="control-label"></label>
                    <input asp-for="InviteeFirstName" class="form-control" />
                    <span asp-validation-for="InviteeFirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InviteeLastName" class="control-label"></label>
                    <input asp-for="InviteeLastName" class="form-control" />
                    <span asp-validation-for="InviteeLastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>
                    <input asp-for="Message" class="form-control" />
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectId" class="control-label"></label>
                    <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </section>
    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
