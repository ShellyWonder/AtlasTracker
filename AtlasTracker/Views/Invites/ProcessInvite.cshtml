@model AtlasTracker.Models.Invite

<div class="right-wrapper text-end">
</div>
<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <h2>
                    <span class="card-title">
                        <span class="number">Welcome</span><br />
                        <span>@Model.InviteeFirstName @Model.InviteeLastName!</span> <br>
                    </span>
                </h2>
                <h5><span>Company Name: @Model.Company!.Name </span></h5>

            </header>
            <div class="card-body">
                <p>
                    @Model.Invitor!.FullName has invited you to collaborate on the @Model.Project!.Name project.
                    <br /><br /> Click the "JOIN" button below to register with the company and begin entering tickets.
                </p>
                <a class="btn btn-primary btn-lg btn-block" asp-area="Identity" asp-page="/Account/RegisterByInvite" asp-route-id="@Model.Id" asp-route-companyId="@Model.CompanyId"><i class="bi bi-box-arrow-in-right"></i> <span>JOIN</span></a>
            </div>
        </section>
    </div>
</div>
