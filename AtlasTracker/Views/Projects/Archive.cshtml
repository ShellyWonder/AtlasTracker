@model AtlasTracker.Models.Project

@{
    ViewData["Title"] = "Archive";
}

<div class="right-wrapper text-end">
</div>
<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div> <h1 class="card-title">Archive Project</h1>
                <h3>Are you sure you want to archive "@Model?.Name" ?</h3>
            </header>
            <div class="card-body">
                <div class="table table-bordered table-striped mb-0" id="datatable-tabletools">
                    <dl>
                        <dt class="col-sm-2">
                            Project Name
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                           Ticket Description
                        </dt>
                        <dd class="col-sm-10">
                            @Model?.Description
                        </dd>
                        <dt class="col-sm-2">
                            Date Created
                        </dt>
                        <dd class="col-sm-10">
                            @Model.CreatedDate.ToString("MM/dd/yyyy")
                        </dd>

                        <dt class="col-sm-2">
                            Priority
                        </dt>
                        <dd class="col-sm-10">
                            @Model.ProjectPriority!.Name
                        </dd>
                                                
                        <dt class="col-sm-2">
                           Deadline
                        </dt>
                        <dd class="col-sm-10">
                            @Model.EndDate.ToString("MM/dd/yyyy")
                        </dd>
                        
                       
                    </dl>
                </div>
                <form asp-action="Archive">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Archive" class="btn btn-danger" />  |
                    <a asp-controller="Projects" asp-action="AllProjects">Back to List</a>
                </form>
            </div>
        </section>
    </div>
</div>
